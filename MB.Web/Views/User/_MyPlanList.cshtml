                    $('.discuss', this).height(height);
                    $(this).height(height + 20 + replyHeight);
                    if ($(this).index() == 0) {
                        $(this).css({ 'margin-top': '95px' });
                    }
                    if (height != 30) {
                        $('.botComent', this).css({ 'margin-left': '50px' });
                    }
                    commentDivLength += $(this).height();
                });
            });
