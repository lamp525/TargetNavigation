                    ncUnits.alert("存在空值，无法提交");
                    return;
                }
                if (resUser == conUser) {
                    ncUnits.alert("确认人不能与责任人相同，请重新选择");
                    return;
                }
                var initial = $("#xxc_initial").val();
                plans.push(plan);
               
